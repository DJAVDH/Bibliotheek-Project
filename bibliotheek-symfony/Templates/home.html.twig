{% endblock %}

{% block footer %}
<div class="footer-content">
    <p>&copy; Bugging Out Project Groepje</p>
    <div class="social-icons">
        <img src="/images/smi-facebook.png.rendition.120.192.png" alt="Facebook">
        <img src="/images/smi-instagram.png.rendition.120.192.png" alt="Instagram">
