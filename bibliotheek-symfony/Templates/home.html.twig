{% extends 'base.html.twig' %}

{% block title %}Bibliotheek Homepage{% endblock %}

{% block content %}
    <h1>Welkom bij de Bibliotheek</h1>
    <p>Ontdek je volgende favoriete boek!</p>

    <a href="{{ path('navigatie') }}" class="navigatie-btn">
        <div class="navigatie-text">Navigatie</div>
        <div class="navigatie-icon">â†‘</div>
    </a>

<h1>Library Genres</h1>
<div class="genres">
    {% for genre in genres %}
        <a href="{{ path('genre_page', { name: genre|lower }) }}" class="btn btn-primary">
            {{ genre }}
        </a>
    {% endfor %}
</div>

<!-- Modal for Login/Register -->
<div id="auth-modal" class="modal-overlay" style="display: none;">
    <div class="modal-content">
        <div class="modal-form">
            <div id="modal-form-content">
                <!-- Form will be populated by JS -->
            </div>
        </div>
        <div class="modal-info">
            <h2>Welkom bij de Bibliotheek</h2>
            <p>Ontdek een wereld van kennis en verhalen. Meld je aan om toegang te krijgen tot onze uitgebreide collectie boeken, tijdschriften en digitale middelen.</p>
            <ul>
                <li>Gratis toegang tot duizenden boeken</li>
                <li>Reserveer boeken online</li>
                <li>Ontvang aanbevelingen op basis van je interesses</li>
            </ul>
        </div>
        <button class="modal-close">&times;</button>
    </div>
</div>

{% endblock %}

{% block login %}
<btn class="login-btn"> Log in </btn>
<input type="text" placeholder="Search..." />
{% endblock %}

{% block register %}
<button class="register-btn">Gratis account aanmaken</button>
{% endblock %}

{% block footer %}
    <p>&copy; Bugging Out Project Groepje</p>
{% endblock %}
